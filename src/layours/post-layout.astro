---
const { title,  last_edited, desc} = Astro.props
import "../styles/global.css"
import styles from "./CSS/Post.module.css"
import Footer from "../components/Footer.astro"
---


<html>
    <head>
        <title>Ali moumen - {title}</title>
        <meta name="description" content={desc}>
        <meta charset="utf-8">
    </head>
    <body>

        <h2 class={styles.title}>
            Ali moumen
        </h2>
        <center class={styles.post_title}>
            <h2>{title}</h2>
            <p>Last edited in : {last_edited}.</p>
        </center>
        <center>
            <div class={styles.content}>
                
                <slot></slot>
            </div>
        </center>
        <Footer></Footer>
    </body>
</html>